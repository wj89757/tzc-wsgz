{__NOLAYOUT__}
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- 分别为：屏幕宽度和设备一直，初始缩放比例，最大缩放比例和禁止用户缩放 -->
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
  <title>治水官网后台-治水项目发布</title>
  <!-- jQuery -->
  <load href="__PUBLIC__/js/jQuery.js" />
  <!-- bootstrap.min.javascript -->
  <load href="__PUBLIC__/js/bootstrap.min.js" />
  <!-- style CSS -->
  <load href="__PUBLIC__/css/back.css" />
  <!-- Bootstrap CSS -->
  <load href="__PUBLIC__/css/bootstrap.min.css" />
  <!-- style CSS -->
  <load href="__PUBLIC__/css/style.css" />

</head>
<body>
  <!-- 头部文件开始 -->
  <include file="Public/nav" />
  <!-- 头部文件结束 -->
  <!--自创sideba-->
  <div class="container" style="min-height: 500px;padding:0;margin:0;">
    <div class="row">
      <!-- 个人中心侧边栏开始 -->
      <include file="Public/backside" />
      <!-- 个人中心侧边栏结束 -->
      <div class="col-md-9 col-sm-8 col-lg-9 col-xs-8">
        <div class="main">
          <div class="main-h" >
            <ul class="breadcrumb">
              <li>
                <a href={:U('Personal/index')}>个人中心</a>
                <span class="divider"></span>
              </li>
              <li>
                <a href="#">信息会展管理</a>
                <span class="divider"></span>
              </li>
              <li class="active">治水项目发布</li>
            </ul>
            <h3 class="side-lined" style="color:#000">{$username}欢迎你！</h3>
            <form class="frm-type">
              <a href={:U('Personal/projectadd')}>
                <input type="button" class="btn btn-default" value="+添加治水项目"></a>
              <ul class="list-group">
                <foreach item="obj" name="list">
                  <li class="list-group-item">
                    <a href={:U('Personal/projectres',array('id'=>
                      $obj['project_id']))} style="color:#663333">
                              {$obj.project_time}【{$obj.project_name}】
                      <a  onClick="return confirm('确认要删除该条治水项目？')" href={:U('Personal/projectdel',array('id'=>
                        $obj['project_id']))} title="删除治水项目" data-toggle="tooltip" >
                        <span class="glyphicon glyphicon-trash" style=" float:right;"></span>
                      </a>
                      <a href={:U('Personal/projectres',array('id'=>
                        $obj['project_id']))} title="修改治水项目">
                        <span class="glyphicon glyphicon-pencil" style=" float:right;  margin-right:10px;"></span>
                      </a>
                    </a>
                  </li>
                </foreach>
              </ul>
              <div class="pagination">{$page}</div>
              <!-- <div style="margin:10px auto;float:right;">{$page}</div>
            -->
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div>
<!-- 底部文件footer开始 -->
<include file="Public/footer" />
<!-- 底部文件footer结束 -->
</body>
</html>
