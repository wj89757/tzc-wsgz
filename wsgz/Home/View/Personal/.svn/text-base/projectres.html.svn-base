{__NOLAYOUT__}
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- 分别为：屏幕宽度和设备一直，初始缩放比例，最大缩放比例和禁止用户缩放 -->
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
  <title>治来水后台-修改治水项目内容</title>
  <!-- jQuery -->
  <load href="__PUBLIC__/js/jQuery.js" />
  <!-- bootstrap.min.javascript -->
  <load href="__PUBLIC__/js/bootstrap.min.js" />
  <!-- style CSS -->
  <load href="__PUBLIC__/css/back.css" />
  <!-- Bootstrap CSS -->
  <!-- Bootstrap CSS -->
  <load href="__PUBLIC__/css/bootstrap.min.css" />
  <!-- style CSS -->
  <load href="__PUBLIC__/css/style.css" />
  <load href="__PUBLIC__/editor/themes/default/css/umeditor.css" />

  <!-- jquery javascript-->
  <load href="__PUBLIC__/js/jquery.min.js" />
  
  <!-- umeditor javascript-->
  <load href="__PUBLIC__/editor/umeditor.config.js" />
  <load href="__PUBLIC__/editor/umeditor.min.js" />
  <load href="__PUBLIC__/editor/lang/zh-cn/zh-cn.js" />
</head>
<body>
  <!-- 头部文件开始 -->
  <include file="Public/nav" />
  <!-- 头部文件结束 -->
  <!--自创sideba-->
    <div class="container" style="min-height: 500px;padding:0;margin:0;">
      <div class="row">
        <!-- 个人中心侧边栏开始 -->
        <include file="Public/backside" />
        <!-- 个人中心侧边栏结束 -->
        <div class="col-md-9 col-sm-8 col-lg-9 col-xs-8">
          <div class="main">
              <div class="main-h" >
                <ul class="breadcrumb">
                  <li>
                    <a href={:U('Personal/index')}>个人中心</a> <span class="divider"></span>
                  </li>
                  <li>
                    <a href={:U('Personal/waterproject')}>治水项目发布</a> <span class="divider"></span>
                  </li>
                  <li class="active">
                    修改治水项目内容
                  </li>
                </ul>
                <h3 class="side-lined" style="color:#000">{$username}欢迎你！</h3>
                <form action={:U('Personal/projectres_fun')} class="frm-type"  method="post">
                  <input style="display:none;" value={$nowart.project_id} name="id"/>  
                  <p>周志标题：
                    <input type="text" name="name" value="{$nowart.project_name}"/>
                  </p>
                  <script type="text/plain" id="container" name="text" style="width:100%;height:300px;"> 
                    {$nowart.project_content} 
                  </script>
                  </br>
                  <input type="submit" name="btn" class="btn btn-default" style="margin-bottom:15px;" value="提交"/>
                </form> 
              </div>
            </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <!-- 实例化编辑器 -->
    <script>  
    var editor = UM.getEditor('container',{
      toolbar: 
            ['bold italic underline fullscreen', 'link unlink','|', 'emotion image video' ,'|', 'fontfamily fontsize'] 
    });
    </script>
    <!-- 实例化编辑器结束 -->
    <!-- 底部文件footer开始 -->
    <include file="Public/footer" />
    <!-- 底部文件footer结束 -->
</body>
</html>



